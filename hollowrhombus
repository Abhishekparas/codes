#include<iostream>
using namespace std;
int main() {
	int n;
	cin>>n;
	for(int i=1; i<=n; i++){
		for(int j=n-i; j>=0; j--){
			cout<<" ";
		}
		if(i==1 || i==n){
			for(int star=1; star<=n; star++){
				cout<<"*";
			}
		}
		else{
			cout<<"*";
			for(int x=1; x<=3; x++){
				cout<<" ";
			}
			cout<<"*";
		}
		cout<<endl;
	}
	return 0;
}
