#include <bits/stdc++.h>
using namespace std;
int main(int argc, char const *argv[])
{
	
	int n;
	cin>>n;
	string s;
	for(int i=0; i<n; i++){
		cin>>s;
		if(s.length() <=10){
			cout<<s<<endl;
		}
		else if(s.length() >10){
		
			cout<<s[0]<<s.substr(1,s.length()-2).length()<<s.back()<<endl;
		}
	}
	
	return 0;
}
