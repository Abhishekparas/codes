#include<iostream>
using namespace std;
int main() {
	int n;
	cin>>n;
	int l=5;
	
	for(int i=1; i<=n; i++){
		
		for(int j=1; j<=i; j++){
			cout<<j<<" ";
		}
		for(int k=1; k<=2*(n-i)-1; k++){
			cout<<"  ";
		}
        if(i<n)
		for(int x=i; x>=1; x--){
			cout<<x<<" ";
		}
        else
        for(int x=i-1; x>=1; x--){
			cout<<x<<" ";
		}

		l = l-2;
		cout<<endl;
	}
	return 0;
}
